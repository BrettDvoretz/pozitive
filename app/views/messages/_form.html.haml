    = f.text_field :name
  .field
    = f.label :phone
    = f.text_field :phone
  .field
    = f.label :email
    = f.text_field :email
  .field
    = f.label :company
    = f.text_field :company
  .field
    = f.label :idea
    = f.text_field :idea
  .field
    = f.label :message
    = f.text_area :message
  .field
    = f.label :extra
    = f.text_field :extra
  .field
    = f.label :type_website
    = f.text_field :type_website
